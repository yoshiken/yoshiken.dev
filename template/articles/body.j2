<body>
  {% include "common/header.j2" %}
  <div class="container">
    <div class="columns">
      <div class="column col-12">
        <div class="article-container">
          <article class="article-content">
            <header>
              <h1>{{ article.title }}</h1>
              <time datetime="{{ article.date }}">{{ article.date.strftime('%Y-%m-%d') }}</time>
            </header>
            <div class="article-body">
              {{ article.text }}
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
  {% include "common/footer.j2" %}
</body>
